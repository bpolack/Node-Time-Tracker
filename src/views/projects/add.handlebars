<div class="container">
    {{#each errors}}
        <div class="alert alert-danger">{{errMsg}}</div>
    {{else}}

    {{/each}}

    <div class="card">
        <div class="card-body">
            <h3>New Project</h3>
            <form action="/projects" method="post">
                <div class="form-group">
                    <label for="title">Project Title</label>
                    <input type="text" name="title" class="form-control" value="{{postbody.title}}" required>
                </div>
                <div class="form-group">
                    <label for="notes">Notes</label>
                    <textarea name="notes" class="form-control" rows="5">{{postbody.notes}}</textarea>
                </div>
                <div class="form-group">
                    <label for="client">Client</label>
                    <select class="select-basic-single" name="client">
                        <option value="0">None</option>
                        {{#each clients}}
                            <option value="{{id}}">{{name}}</option>
                        {{else}}
                            
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary my-3">Submit</button>
            </form>
        </div>
    </div>
</div>