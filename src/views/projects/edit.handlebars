<div class="container">
    {{#each errors}}
        <div class="alert alert-danger">{{errMsg}}</div>
    {{else}}

    {{/each}}

    <div class="card">
        <div class="card-body">
            <h3>Edit Project</h3>
            <form method="post" action="/projects/{{project.id}}?_method=PUT">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Project Title</label>
                    <input type="text" name="title" class="form-control" value="{{project.title}}" required>
                </div>
                <div class="form-group">
                    <label for="notes">Notes</label>
                    <textarea name="notes" class="form-control" rows="5">{{project.notes}}</textarea>
                </div>
                <div class="form-group">
                    <label for="dateMod">Date Modified</label>
                    <input type="text" name="dateMod" class="form-control" value="{{project.dateMod}}" readonly>
                </div>
                <div class="form-group">
                    <label for="dateCreate">Date Created</label>
                    <input type="text" name="dateCreate" class="form-control" value="{{project.dateCreate}}" readonly>
                </div>
                <div class="form-group">
                    <label for="client">Client</label>
                    <select class="select-basic-single" name="client">
                        {{#select project.client}}
                            <option value="0">None</option>
                            {{#each clients}}
                                <option value="{{id}}">{{name}}</option>
                            {{else}}
                                
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary my-3">Save</button>
            </form>
        </div>
    </div>
</div>