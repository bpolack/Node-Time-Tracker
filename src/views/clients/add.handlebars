<div class="container">
    {{#each errors}}
        <div class="alert alert-danger">{{errMsg}}</div>
    {{else}}

    {{/each}}

    <div class="card">
        <div class="card-body">
            <h3>New Client</h3>
            <form action="/clients" method="post">
                <div class="form-group">
                    <label for="name">Client Name</label>
                    <input type="text" name="name" class="form-control" value="{{postbody.name}}" required>
                </div>
                <div class="form-group">
                    <label for="contact">Contact Name</label>
                    <input type="text" name="contact" class="form-control" value="{{postbody.contact}}">
                </div>
                <div class="form-group">
                    <label for="website">Website</label>
                    <input type="text" name="website" class="form-control" value="{{postbody.website}}">
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" value="{{postbody.email}}">
                </div>
                <div class="form-group">
                    <label for="phone">Phone</label>
                    <input type="text" name="phone" class="form-control" value="{{postbody.phone}}">
                </div>
                <div class="form-group">
                    <label for="address">Address</label>
                    <input type="text" name="address" class="form-control" value="{{postbody.address}}">
                </div>
                <button type="submit" class="btn btn-primary my-3">Submit</button>
            </form>
        </div>
    </div>
</div>