<div class="container">

    <div class="card">
        <div class="card-body">
            <h3>Edit Time</h3>
            <form method="post" action="/time/{{chunk.id}}?_method=PUT">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" value="{{chunk.title}}" required>
                </div>
                <div class="form-group">
                    <label for="startDate">Start</label>
                    <input type="text" class="form-control flatpickr-datetime" name="startDate" value="{{chunk.startDate}}" placeholder="Start Time">
                </div>
                <div class="form-group">
                    <label for="endDate">End</label>
                    <input type="text" class="form-control flatpickr-datetime" name="endDate" value="{{chunk.endDate}}" placeholder="End Time">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea name="content" class="form-control" rows="5">{{chunk.content}}</textarea>
                </div>
                <div class="form-group">
                    <label for="refLink">Reference Link</label>
                    <input type="text" name="refLink" class="form-control" value="{{chunk.refLink}}">
                </div>
                <div class="form-group">
                    <label for="client">Project</label>
                    <select class="select-basic-single" name="project">
                        {{#select chunk.project}}
                            <option value="0">None</option>
                            {{#each projects}}
                                <option value="{{id}}">{{title}}</option>
                            {{else}}
                                
                            {{/each}}
                        {{/select}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary my-3">Save</button>
            </form>
        </div>
    </div>
</div>