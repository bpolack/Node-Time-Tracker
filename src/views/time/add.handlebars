<div class="container">
    {{#each errors}}
        <div class="alert alert-danger">{{errMsg}}</div>
    {{else}}

    {{/each}}

    <div class="card">
        <div class="card-body">
            <h3>Add Time</h3>
            <form action="/time" method="post">
                <div class="form-group">
                    <label for="title">Title</label>
                    <input type="text" name="title" class="form-control" value="{{postbody.title}}" required>
                </div>
                <div class="form-group">
                    <label for="startDate">Start</label>
                    <input type="text" class="form-control flatpickr-datetime" name="startDate" value="{{postbody.startDate}}" placeholder="Start Time">
                </div>
                <div class="form-group">
                    <label for="endDate">End</label>
                    <input type="text" class="form-control flatpickr-datetime" name="endDate" value="{{postbody.endDate}}" placeholder="End Time">
                </div>
                <div class="form-group">
                    <label for="content">Content</label>
                    <textarea name="content" class="form-control" rows="5">{{postbody.content}}</textarea>
                </div>
                <div class="form-group">
                    <label for="refLink">Reference Link</label>
                    <input type="text" name="refLink" class="form-control" value="{{postbody.refLink}}">
                </div>
                <div class="form-group">
                    <label for="project">Project</label>
                    <select class="select-basic-single" name="project">
                        <option value="0">None</option>
                        {{#each projects}}
                            <option value="{{id}}">{{title}}</option>
                        {{else}}
                            
                        {{/each}}
                    </select>
                </div>
                <button type="submit" class="btn btn-primary my-3">Submit</button>
            </form>
        </div>
    </div>
</div>