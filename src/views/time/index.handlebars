<div class="container">
    <h1>Time Tracking</h1>
    
    {{#each errors}}
        <div class="alert alert-danger">{{errMsg}}</div>
    {{else}}
    {{/each}}

    <div id='calendar'></div>

    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#addTimeModal">Add Time</button>
    <div class="modal fade" id="addTimeModal" tabindex="-1" role="dialog" aria-labelledby="addTimeModal" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <form method="post" action="/time">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Add Time</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <input type="text" name="title" class="form-control" placeholder="Add title" value="{{postbody.title}}" required>
                        </div>
                        <div class="row">
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="startDate">Start</label>
                                    <input type="text" class="form-control flatpickr-datetime" name="startDate" value="{{postbody.startDate}}" placeholder="Start Time">
                                </div>
                            </div>
                            <div class="col-sm">
                                <div class="form-group">
                                    <label for="endDate">End</label>
                                    <input type="text" class="form-control flatpickr-datetime" name="endDate" value="{{postbody.endDate}}" placeholder="End Time">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="project"> Assign to Project</label>
                            <select class="select-basic-single" name="project">
                                <option value="0">None</option>
                                {{#each projects}}
                                    <option value="{{id}}">{{title}}</option>
                                {{else}}
                                    
                                {{/each}}
                            </select>
                        </div>
                        <div class="form-group">
                            <textarea name="content" placeholder="Description" class="form-control" rows="4">{{postbody.content}}</textarea>
                        </div>
                        <div class="form-group">
                            <label for="refLink">Reference Link</label>
                            <input type="text" name="refLink" class="form-control" value="{{postbody.refLink}}">
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-primary">Confirm</button>
                    </div>
                </div>
            </form>
        </div>
    </div>

</div>