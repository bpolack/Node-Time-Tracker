<div class="section">

    <div class="container py-4 ">

        <div class="jumbotron" style="margin: 0 auto; max-width: 500px;">
            <h1 class="display-4">Register</h1>
            <p>Create a new app account.</p>

            <form action="/sign-up" method="post">
                <div class="form-group">
                    <label for="firstname">First Name</label>
                    <input type="text" name="firstname" class="form-control" value="{{postbody.firstname}}" required>
                </div>
                <div class="form-group">
                    <label for="lastname">Last Name</label>
                    <input type="text" name="lastname" class="form-control" value="{{postbody.lastname}}" required>
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input type="text" name="email" class="form-control" value="{{postbody.email}}" required>
                </div>
                <div class="form-group">
                    <label for="password">Password</label>
                    <input type="password" name="password" class="form-control" required>
                </div>
                <div class="form-group">
                    <label for="confirmPassword">Confirm Password</label>
                    <input type="password" name="confirmPassword" class="form-control" required>
                </div>
                {{> _messages}}
                <div class="form-group">
                    <button type="submit" class="btn btn-primary my-3">Register</button>
                </div>
            </form>
        </div>

        <p class="text-center py-4">Already have an account? <a href="/login/">Log in.</a></p>

    </div>
</div>