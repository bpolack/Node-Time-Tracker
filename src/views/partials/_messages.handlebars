<div aria-live="polite" aria-atomic="true" class="position-fixed" style="max-width:300px; bottom:30px; right:30px;">
    {{#each error}}
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto"><span class="badge badge-danger " style="font-size:1em;">error</span></strong>
            <small class="text-muted"></small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{this}}
        </div>
    </div>
    {{else}}
    {{/each}}

    {{#each message}}
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto"><span class="badge badge-info " style="font-size:1em;">message</span></strong>
            <small class="text-muted"></small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{this}}
        </div>
    </div>
    {{else}}
    {{/each}}

    {{#each success}}
    <div class="toast" role="alert" aria-live="assertive" aria-atomic="true" data-autohide="false">
        <div class="toast-header">
            <strong class="mr-auto"><span class="badge badge-success " style="font-size:1em;">success</span></strong>
            <small class="text-muted"></small>
            <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                <span aria-hidden="true">&times;</span>
            </button>
        </div>
        <div class="toast-body">
            {{this}}
        </div>
    </div>
    {{else}}
    {{/each}}
    
</div>